<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br/>

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <input id="song_notes_1" name="song[note_contents][]" value="<%= @song.notes.first.content if @song.notes.length > 0%>">
  <input id="song_notes_2" name="song[note_contents][]" value="<%= @song.notes[1].content if @song.notes.length > 1%>">
  <input id="song_notes_3" name="song[note_contents][]" value="<%= @song.notes.last.content if @song.notes.length > 2%>">
  <%= f.submit %>
<% end %>
