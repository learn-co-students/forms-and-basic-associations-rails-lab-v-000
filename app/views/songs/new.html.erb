<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_name, "Genre Name" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  Note: <input name="song[note_contents][]" id="song_notes_1">
  Note: <input name="song[note_contents][]" id="song_notes_2">
  Note: <input name="song[note_contents][]" id="song_notes_3">
  <br />
  <br />

  <%= f.submit %>
<% end %>
