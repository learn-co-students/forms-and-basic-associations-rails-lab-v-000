<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <label for="song_notes_1">Song Note 1: </label>
  <input name = 'song[note_contents][]' id='song_notes_1'>
  <label for="song_notes_2">Song Note 2: </label>
  <input name = 'song[note_contents][]' id='song_notes_2'>
  <%= f.submit %>
<% end %>
