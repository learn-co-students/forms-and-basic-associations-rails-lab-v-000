<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  
  <textarea id="song_notes_1" name="song[note_contents][]"></textarea>
  <textarea id="song_notes_2" name="song[note_contents][]"></textarea>
  <textarea id="song_notes_3" name="song[note_contents][]"></textarea>
  <%= f.submit %>
<% end %>


