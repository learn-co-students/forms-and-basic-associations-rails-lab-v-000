<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name%>
  <%= f.text_field :artist_name, list: "artists_autocomplete"%>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name%>">
    <% end %>
  </datalist>

  <br>
  
  <%= f.label :genre_name %> 
  
  <select name="song[genre_name]" id="song_genre_id">
      <% Genre.all.each do |genre| %>
        <option value="<%= genre.name %>"><%= genre.name %></otion>
      <% end %>
  </select>
 


  
  <br>  
  <%= f.label :note_contents %>
  <input id="song_notes_1" name="song[note_contents][]" type="text"/>
  <%= f.label :note_contents %>
  <input id="song_notes_2" name="song[note_contents][]" type="text"/>
  <%= f.label :note_contents %>
  <input id="song_notes_3" name="song[note_contents][]" type="text"/>

  <%= f.submit %>
<% end %>


