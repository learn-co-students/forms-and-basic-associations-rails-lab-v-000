<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  
  <!-- song title input -->
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  
  <!-- song artist autocomplete -->
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_name_autocomplete" %>
    <datalist id ="artist_name_autocomplete">
      <%= Artist.all.each do |artist| %>
        <option value="<%= artist.name %>">
      <% end %>
    </datalist> <br>

  <!-- song genre dropdown -->
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <!-- song notes input to array params -->
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  <input type="text" name="song[note_contents][]" id="song_notes_3">


  <%= f.submit %>
<% end %>


