<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name%>

  <%= f.label :genre_name %>
  <%= f.text_field :genre_name, list: "categories_autocomplete" %>
  <datalist id="categories_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <br />

  <%= f.submit %>
<% end %>
