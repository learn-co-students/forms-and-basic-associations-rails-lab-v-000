<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :song_genre_id, "song_genre_id" %>
  <%= f.text_field :genre_id, list: "song_genre_id" %>
  <datalist id="song_genre_id">
    <% Genre.all.each do |genre| %>
      <option id="song_genre_id" value="<%= genre.name %>">
    <% end %>
  </datalist>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <input id="song_notes_1" name="song[note_contents][]">
  <input id="song_notes_2" name="song[note_contents][]">
  <input id="song_notes_3" name="song[note_contents][]">
  <%= f.submit %>
<% end %>


