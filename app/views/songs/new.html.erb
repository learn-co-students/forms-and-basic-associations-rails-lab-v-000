<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.text_field :genre_id, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.id %>"><%= genre.name %></option>
    <% end %>
  </datalist>

  <!-- <input name="song[note_contents][]"> -->
  <input name="song_notes_1">
  <input name="song_notes_2">

  <%= f.text_field :note_contents, list: "notes_autocomplete" %>
  <datalist id="notes_autocomplete">
    <% Note.all.each do |note| %>
      <option value="<%= note.content %>"><%= note.content %></option>
    <% end %>
  </datalist>


  <%= f.submit %>
<% end %>

