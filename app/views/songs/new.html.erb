<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name  %>
  <br />
  <%(0..3).each do |n|%>
    <label for="<%= "song_notes_"+"#{n+1}"%>">Notes </label>
    <input type="text" name="song[note_contents][]" id="<%= "song_notes_"+"#{n+1}"%>">
    <br />
  <%end%>
  <%= f.submit %>
<% end %>
