
<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_names" %>
  <datalist id="artist_names">
    <%= Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <%= f.label :genre %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name%>
  <input id="song_notes_1" name="song[note_contents][]" type="text">
  <input id="song_notes_2" name="song[note_contents][]" type="text">
  <input id="song_notes_3" name="song[note_contents][]" type="text">
  <%= f.submit %>
<% end %>