<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br />

  <%= f.label :genre_id %>
  <%= f.text_field :genre_id, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist><br />

  <%= f.label :notes %>
  <input id="song_notes_1" name="song[note_contents][]">
  <input id="song_notes_2" name="song[note_contents][]">
  <input id="song_notes_3" name="song[note_contents][]">
  <input id="song_notes_4" name="song[note_contents][]">
  <input id="song_notes_5" name="song[note_contents][]">
  <input id="song_notes_6" name="song[note_contents][]">

  <br/>

  <%= f.submit %>
<% end %>
