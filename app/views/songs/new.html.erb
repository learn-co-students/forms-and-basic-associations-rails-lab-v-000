<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <%= f.submit %>
  <br>

<!-- <input type="text" placeholder="Note 1" name="song[note_contents][]" id="song_notes_1"><br /> -->
  <%= f.label :note_1 %>
  <input name='song[note_contents][]' id='song_notes_1'> <br>
  <%= f.label :note_2 %>
  <input name='song[note_contents][]' id='song_notes_2'> <br>
  <%= f.label :note_3 %>
  <input type="text" placeholder="note-3" name="song[note_contents][]" id="song_notes_3"> <br>
<% end %>
