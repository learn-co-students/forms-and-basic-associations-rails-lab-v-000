<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>
  <br>
  <!--<%= f.label :genre_name %><br>
  <%= f.text_field :genre_name, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.try(:name) %>"></option>
    <% end %>
  </datalist><br><-->
  <%= f.label :genre_id, class: "control-label" %><br>
  <%= f.collection_select(
        :genre_id,
        Genre.all,
        :id,
        :name,
        { include_blank: "Please select one" },
        { class: "form-control" }
  ) %>
  <br>
  <label>Notes</label>
  <br>
  <input type="text" name="song[note_contents][]" id="song_notes_1"><br>
  <input type="text" name="song[note_contents][]" id="song_notes_2"><br>
  <input type="text" name="song[note_contents][]" id="song_notes_3"><br>
  <br><br>
  <%= f.submit %>
<% end %>
