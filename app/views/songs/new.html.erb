<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist, name: "song[artist_name]", list: "artists_autocomplete", id: "song_artist_name" %>
  <datalist id="artists_autocomplete">
    <% @artists.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br>
  <%= f.label :genre %>

  <%= f.collection_select :genre_id, @genres, :id, :name %>
  <br>
  <p><%= f.label :notes %></p>
  <p><%= f.text_field :notes, id: "song_notes_1", multiple: true, value: nil %></p>
  <p><%= f.text_field :notes, id: "song_notes_2", multiple: true, value: nil%></p>
  <p><%= f.text_field :notes, id: "song_notes_3", multiple: true, value: nil%></p>
  <p><%= f.text_field :notes, id: "song_notes_4", multiple: true, value: nil%></p>
  <p><%= f.text_field :notes, id: "song_notes_5", multiple: true, value: nil%></p>

  <%= f.submit %>
<% end %>


