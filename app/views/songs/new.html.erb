<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete"%>
    <datalist id="artists_autocomplete">
      <% Artist.all do |a| %>
        <option value="<%=a.name%>">
      <% end %>
    </datalist>
  <br />

  <%= f.label :genre %>
  <%= f.collection_select :genre, Genre.all, :id, :name %>
  <br />

  <%= f.label :note %>
  <input id="song_notes_1" name="song[note_ids][]">
  <input id="song_notes_2" name="song[note_ids][]">
  <input id="song_notes_3" name="song[note_ids][]">
  <br />

  <%= f.submit %>
<% end %>
