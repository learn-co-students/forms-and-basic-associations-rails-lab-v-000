<h1>Create a Song</h1>

<%= form_for @song do |f| %>
<%= f.label :title %>
<%= f.text_field :title %> <br/><br/>

<%= f.label :artist %>
<%= f.text_field :artist_name, list: "artists_autocomplete", id: "artist_name" %>
  <datalist id="artists_autocomplete">
    <%= Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>

<%= f.label :genre %>
<%= f.collection_select :genre_id, Genre.all, :id, :name %><br/><br/>

<%= f.label :notes %>

  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  <br/><br/>

<%= f.submit %>
<% end %>


