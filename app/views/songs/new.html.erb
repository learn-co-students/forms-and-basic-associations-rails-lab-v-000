<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre_name %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    <datalist id="genre_list">
      <% Genre.all.each do |g| %>
        <option name="<%=g.name%>" value="<%=g.name%>">
      <% end %>
   </datalist><br>
  <%= f.label :note %><br>
    <input name='song[note_contents][]' id='song_notes_1'><br>
    <input name='song[note_contents][]' id='song_notes_2'><br>
    <input name='song[note_contents][]' id='song_notes_3'><br>
  <%= f.submit %>
<% end %>
