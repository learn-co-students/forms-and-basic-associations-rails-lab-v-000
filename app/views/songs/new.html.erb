<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  </p>

  <p>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </p>

  <p>
  <label for="song_notes_1">Song Note 1:</label>
  <input id="song_notes_1" name="song[note_contents][]">
  </p>

  <p>
  <label for="song_notes_2">Song Note 2:</label>
  <input id="song_notes_2" name="song[note_contents][]">
  </p>

  <%= f.submit %>
<% end %>
