<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist %>
  <%= f.text_field :artist, id: "song_artist_name" %>

  <%= f.collection_select :genre, Genre.all, :id, :name, {}, {:id => "song_genre_id"} %>

  <%= f.text_field :notes, name: "song[song_notes][]", id: "song_notes_1", list: "artist_list" %>
  <%= f.text_field :notes, name: "song[song_notes][]", id: "song_notes_2", list: "artist_list" %>
  <datalist id="artist_list">
  <% Artist.all.each do |a| %>
    <option value="<%=a.name%>">
  <% end %>
  </datalist>

  <%= f.submit %>
<% end %>


