<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title, 'Title: ' %>
  <%= f.text_field :title %> <br>

  <%= f.label :artist_name, 'Artist: ' %>
  <%= f.text_field :artist_name %> <br>

  <%= f.label :genre_name, 'Genre: ' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %> <br>

  Note 1: <input type="text" name="song[note_contents][]" id="song_notes_1"><br />
  Note 2: <input type="text" name="song[note_contents][]" id="song_notes_2"><br />
  Note 3: <input type="text" name="song[note_contents][]" id="song_notes_3"><br />

  <%= f.submit %>
<% end %>


