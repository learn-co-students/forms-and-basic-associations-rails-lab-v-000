<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  <label for="song_notes_1">Notes:</label>
  <input name="song[note_contents][]" id="song_notes_1">
  <br>
  <label for="song_notes_2">Notes:</label>
  <input name="song[note_contents][]" id="song_notes_2">
  <br>
  <label for="song_notes_3">Notes:</label>
  <input name="song[note_contents][]" id="song_notes_3">
  <br>
  <%= f.submit %>
<% end %>


