<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, id: "song_title" %><br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br />

  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br /><br />

  <%= f.label :content %>
    <input name="song[note_contents][]" id="song_notes_1" />
    <input name="song[note_contents][]" id="song_notes_2"/>
  <br />

  <%= f.submit :commit %>
<% end %>
