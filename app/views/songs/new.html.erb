<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br/>

  <%= f.label :genre_name %>
  <%= f.text_field :genre_id, list:"genre_names" %>
  <datalist id ="genre_names">
    <% Genre.all.each do |g| %>
      <option value="<%= g.name %>">
    <% end %>
  </datalist>
  <br/>
  <input name="song[note_contents][]" id="song_notes_1"><br/>
  <input name="song[note_contents][]" id="song_notes_2"><br/>

  <%= f.submit %>
<% end %>


