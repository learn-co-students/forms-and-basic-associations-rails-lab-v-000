<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  <%= f.label "New Genre" %>
  <%= f.text_field :genre_name %><br>
  Note 1:<input name="song[note_contents][]" id="song_notes_1"><br>
  Note 2:<input name="song[note_contents][]" id="song_notes_2"><br>
  Note 3:<input name="song[note_contents][]" id="song_notes_3"><br>
  <%= f.submit %>
<% end %>
