<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
    <br />
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name, list: 'artists_autocomplete' %>
    <datalist id = 'artists_autocomplete'>
    <% Artist.all.each do |artist| %>
     <option value = '<%= artist.name %>'>
   <% end %>
 </datalist>
 <br />
 <p> or type a new artist </p>
 <textarea name = 'artist[name]'></textarea>
  <br />

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <p>Share your thoughts:</p>
  <input name = 'song[note_contents][]' id = 'song_notes_1'><br>
  <input name = 'song[note_contents][]' id = 'song_notes_2'><br>
  <input name = 'song[note_contents][]' id = 'song_notes_3'><br>
  <br />

  <%= f.submit %>
<% end %>
