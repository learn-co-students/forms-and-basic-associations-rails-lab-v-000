<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %> 
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label "Select Genre" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name") %>
  <br>
  <br>
  
  
  <%= f.fields_for :notes do |note_form| %>
    <%= note_form.label :note %><br>
    <%= note_form.text_area :content, rows: 3, cols: 20 %>
    <br/>
  <% end %>
  
  <%= f.submit %>
<% end %>


