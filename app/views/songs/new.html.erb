<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
<!-- A text input box that sets the song's title. -->
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
<!-- A text input box that sets the song's artist. -->
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <!-- A selection box for genre. Users should be able to pick amongst existing
  genres only. -->
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <br />
  <!-- Several text input boxes to add notes to the song. These should have the
  IDs song_notes_1, song_notes_2, and so on for the specs to pass. (You might
  need to search around for how to pass an array using strong_params!) -->
  <%= f.label :notes %>
  <input name="song[note_ids][]" id="song_notes_1">
  <input name="song[note_ids][]" id="song_notes_2">
  <input name="song[note_ids][]" id="song_notes_3">
  <%= f.submit %>
<% end %>
