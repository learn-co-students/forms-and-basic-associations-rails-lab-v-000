<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.text_field :artist_name, list: "artists_autocomplete", id: "song_artist_name" %>
  <datalist id="artists_autocomplete">
    <%= Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <%= f.text_field :note_contents, id: "song_notes_1", multiple: true %>
  <%= f.text_field :note_contents, id: "song_notes_2", multiple: true%>

  <br />

  <%= f.submit %>

<% end %>


