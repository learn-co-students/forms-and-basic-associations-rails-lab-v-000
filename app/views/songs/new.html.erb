<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  Title: <%= f.text_field :title %><br>
  Artist Name: <%= f.text_field :artist_name %><br>
  Genre: <%= f.collection_select :genre_id, Genre.all, :id, :name %><br> <!-- selection box-->

  Notes: <br>
  <input name="song[note_contents][]" id="song_notes_1"><br>
  <input name="song[note_contents][]" id="song_notes_2"><br>
  <input name="song[note_contents][]" id="song_notes_3"><br>

  <%= f.submit %>
<% end %>
