<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all.sort_by{|g| g.name}, :id, :name %>
  <br>
  <label>Note 1: </label>
  <input name="song[note_contents][]" id="song_notes_1"><br>
  <label>Note 2: </label>
  <input name="song[note_contents][]" id="song_notes_2"><br>
  <label>Note 3: </label>
  <input name="song[note_contents][]" id="song_notes_3"><br>
  <%= f.submit %>
<% end %>
