<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <% 3.times do |i| %>
    <%= f.text_field :note_contents, name: "song[note_contents][]", id: "song_notes_#{i + 1}" %>
  <% end %>

  <%= f.submit %>
<% end %>


