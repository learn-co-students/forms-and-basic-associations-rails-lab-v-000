<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    <datalist id="genre_list">
      <% Genre.all.each do |genre| %>
        <option name="<%=genre.name%>" value="<%=genre.name%>">
      <% end %>
   </datalist>
   <br />

  <%= f.label :note %><br>
    <input name='song[note_contents][]' id='song_notes_1'><br>
    <input name='song[note_contents][]' id='song_notes_2'><br>
   <br />

  <%= f.submit %>
<% end %>
