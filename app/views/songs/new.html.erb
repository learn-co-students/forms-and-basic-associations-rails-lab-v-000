<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
<br/>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  
  <br/>
 <%= f.label :artist_name %>
 <%= f.text_field :artist_name %>

<br/>
  Notes (Optional)<br/>
<%= f.label :song_notes_1%>
  <input name="song[note_contents][]" id="song_notes_1"><br/>
  <input name="song[note_contents][]" id="song_notes_2"><br/>
  <input name="song[note_contents][]"><br/>

  <br/>
 <%= f.label :genre %><br>
 
 <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>

  
  <%= f.submit %>
<% end %>


