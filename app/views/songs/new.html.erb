<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>:
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :artist_name %>:
  <%= f.text_field :artist_name %>
  <br><br>

  <%= f.label :genre_name %>:
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br><br>

  <%= f.label :notes %>:<br><br>
  <input id="song_notes_1", name="song[note_contents][]"/><br><br>
  <input id="song_notes_2", name="song[note_contents][]"/><br><br>
  <input id="song_notes_3", name="song[note_contents][]"/><br><br>

  <br></br>

  <%= f.submit %>
<% end %>
