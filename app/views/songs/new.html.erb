<h1>Create a Song</h1>

<%= form_for @song do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>

  <%= f.label :genre_name %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>

  <label for="song_notes_1">Song Note 1: </label><br>
  <input name="song[note_contents][]" type="text" id="song_notes_1"><br>

  <label for="song_notes_2">Song Note 2: </label><br>
  <input name="song[note_contents][]" type="text" id="song_notes_2">

<%= f.submit %>
<% end %>
