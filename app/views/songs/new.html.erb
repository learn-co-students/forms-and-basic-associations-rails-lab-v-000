<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <!-- text input box that sets song's title -->
  <%= f.label :title %>
  <%= f.text_field :title %>
  <!-- text input box for artist -->
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <!-- selection box for genre: must select from existing genres -->
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <!-- several text input boxes to add notes to song -->
  <input name="song[note_contents][]" id="song_notes_1">
  <input name="song[note_contents][]" id="song_notes_2">
  <input name="song[note_contents][]" id="song_notes_3">
  <br />
  <%= f.submit %>
<% end %>


