<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all.sort_by{|g| g.name}, :id, :name, prompt: true %>
  <br>
  <%= f.label :song_notes_1 %>
  <%= f.text_field :note_contents, name: "song[note_contents][]", id: "song_notes_1" %>
  <br>
  <%= f.label :song_notes_2 %>
  <%= f.text_field :note_contents, name: "song[note_contents][]", id: "song_notes_2" %>
  <br>
  <%= f.submit %>
<% end %>
