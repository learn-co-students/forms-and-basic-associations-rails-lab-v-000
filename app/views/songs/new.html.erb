<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_name_autocomplete" %>
  <datalist id="artist_name_autocomplete">
    <%= Artist.all.each do |artist| %>
    <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br />

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <input type="text" placeholder="Note 1" name="song[note_contents][]" id="song_notes_1"><br />
  <input type="text" placeholder="Note 2" name="song[note_contents][]" id="song_notes_2"><br />
  <input type="text" placeholder="Note 3" name="song[note_contents][]" id="song_notes_3"><br />

  <%= f.submit %>
<% end %>