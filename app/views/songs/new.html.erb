<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <!-- <%= f.collection_select :genre_id, Genre.all, :id, :name %> -->
  <%= f.text_field :genre, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <%=Genre.all.each do |genre| %>
      <option value="<%=genre.name %>">
    <% end %>
  </datalist>
  <!-- <textarea name="post[content]"></textarea> -->
  <input name="song[note_contents][]" id="song_notes_1">
  <input name="song[note_contents][]" id="song_notes_2">
  <input name="song[note_contents][]" id="song_notes_3">
  <br />

  <%= f.submit %>
<% end %>
