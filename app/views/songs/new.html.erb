<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name, :artist %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_id, :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <%= f.label :song_notes_1 %>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <br />

  <%= f.label :song_notes_2 %>
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  <br />

  <%= f.submit %>
<% end %>
