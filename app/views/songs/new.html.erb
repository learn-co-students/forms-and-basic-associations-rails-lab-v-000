<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre_id %>
  <%= f.select :genre_id, Genre.all.map {|g| [g.name, g.id]} %>
  <br>
  <h3>Notes:</h3>
  <div class="form">
    <input name="song[note_ids][]" id="song_notes_1"><br>
    <input name="song[note_ids][]" id="song_notes_2"><br>
    <input name="song[note_ids][]" id="song_notes_3"><br>
  </div>

  <%= f.submit %>
<% end %>


