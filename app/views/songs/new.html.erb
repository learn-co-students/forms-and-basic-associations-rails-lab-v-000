<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <br><%= f.label :artist_name %>
      <%= f.text_field :artist_name %><br>

  <br><%= f.label :genre_name %>
      <%= f.collection_select(:genre_id, Genre.order('name ASC'), :id, :name) %> <br>

  <br><%= f.submit %>
<% end %>
