<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name, list: "artists_autocomplete" %>
    <datalist id="artists_autocomplete">
      <% Artist.all.each do |artist| %>
        <option value="<%= artist.name %>">
      <% end %>
    </datalist>
  <br />

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name%>
  <br />

  <%= f.label :song_notes_1 %>
  <%= f.text_field :note_contents, multiple: true, id:"song_notes_1" %>
  <br />

  <%= f.label :song_notes_2 %>
  <%= f.text_field :note_contents, multiple: true, id:"song_notes_2" %>
  <br />

  <%= f.submit %>
<% end %>
