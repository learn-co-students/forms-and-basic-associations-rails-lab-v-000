<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :song_title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <%= f.label :notes %>
  <%= f.label :notes_1 %>
  <input name="song[note_contents][]" type="text" id = "song_notes_1" >
  <%= f.label :notes_2 %>
  <input name="song[note_contents][]" type="text" id = "song_notes_2">
  <%= f.label :notes_3 %>
  <input name="song[note_contents][]" type="text" id = "song_notes_3">


    <br />

  <%= f.submit %>
<% end %>


