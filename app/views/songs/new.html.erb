  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.text_field :genre, list: "genres_autocomplete" %>
  <datalist id="categories_autocomplete">
    <%= Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <input name="song[notes][]">
  <input name="song[notes][]">
  <input name="song[notes][]">
  <%= f.submit %>
<% end %>
