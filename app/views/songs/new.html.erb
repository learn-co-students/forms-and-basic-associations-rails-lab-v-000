<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title, 'Title:' %>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name, 'Artist Name:' %>
  <%= f.text_field :artist_name, list: 'artist_name_autocomplete' %><br>
    <datalist id="artist_name_autocomplete">
      <%= Artist.all.each do |a| %>
        <option value="<%= a.name %>">
      <% end %>
    </datalist>

  <%= f.label :genre, 'Genre:' %>
  <%= f.collection_select :genre_id, @genres, :id, :name %><br>

  <%= f.label :song_notes_1, 'Song Note 1:' %>
  <input type="text" id="song_notes_1" name="song[note_contents][]"><br>
  <%= f.label :song_notes_2, 'Song Note 2:' %>
  <input type="text" id="song_notes_2" name="song[note_contents][]"><br>
  <%= f.label :song_notes_3, 'Song Note 3:' %>
  <input type="text" id="song_notes_3" name="song[note_contents][]"><br>

  <%= f.submit %>
<% end %>
