<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br /><br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br /><br />

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, @genres, :id, :name %>
  <br /><br /> 

  <%= f.label 'notes_1', 'Note 1:' %>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <br /><br />

  <%= f.label 'notes_2', 'Note 2:' %>
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  <br /><br />

  <%= f.submit %>
<% end %>


