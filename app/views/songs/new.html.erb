<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>
  <br />
  <%= f.label :note %>

  <li><input name="song[notes][]" type="text" id="song_notes_1"/></li>
  <li><input name="song[notes][]" type="text" id="song_notes_2"/></li>
  <li><input name="song[notes][]" type="text" id="song_notes_3"/></li>


  <br />



  <%= f.submit %>
<% end %>
