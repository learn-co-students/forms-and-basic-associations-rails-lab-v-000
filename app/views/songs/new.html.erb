<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_autocomplete" %>
  <datalist id="artist_autocomplete">
    <%= Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br><br>

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br><br>

  <label>Notes</label><br>
  <input id="song_notes_1" name="new_notes[]">
  <input id="song_notes_2" name="new_notes[]">
  <input id="song_notes_3" name="new_notes[]">
  <br>

  <%= f.submit %>
<% end %>
