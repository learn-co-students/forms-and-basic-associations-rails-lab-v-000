<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <p><%= f.label :title %>: 
  <%= f.text_field :title %></p>

  <p><%= f.label :artist_name %>: <%= f.text_field :artist_name, list: "artists_autocomplete" %>
     <datalist id="artists_autocomplete">
          <%= Artist.all.each do |artist| %>
               <option value="<%= artist.name %>">
          <% end %>
     </datalist></p>

  <p><%= f.label :genre_id %>: <%= f.collection_select :genre_id, Genre.all, :id, :name %></p>
  <p>Feel free to make some notes:</p>
  <p>  <input name='song[note_contents][]' id='song_notes_1'></p>
  <p>  <input name='song[note_contents][]' id='song_notes_2'></p>
  <p>  <input name='song[note_contents][]' id='song_notes_3'></p>
  <%= f.submit %>
<% end %>


