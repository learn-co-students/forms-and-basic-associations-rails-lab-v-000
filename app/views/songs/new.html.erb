<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <br />
  <br />
  <%= f.label :genre, "Genre:" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  <br />
  <label> Notes: </label>
  <br />
  <br />
  <input name="song[note_contents][]", label="Notes", id="song_notes_1">
  <br />
  <br />
  <input name="song[note_contents][]", label="Notes", id="song_notes_2">
  <br />
  <br />
  <input name="song[note_contents][]", label="Notes", id="song_notes_3">
  <br />
  <br />
  <%= f.submit %>
<% end %>
