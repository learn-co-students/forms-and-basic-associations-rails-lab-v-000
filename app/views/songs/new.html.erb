<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name %>
  <br>
  <%= f.label "Notes" %>
  <%= f.text_field name="note_contents", multiple: true, id: "song_notes_1", value: "" %>
  <%= f.text_field name="note_contents", multiple: true, id: "song_notes_2", value: "" %>
  <%= f.submit %>
<% end %>
