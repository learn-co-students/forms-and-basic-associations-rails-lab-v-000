<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label "Genre"  %>
  <%= f.select :genre_id, Genre.all.map{|g| [g.name, g.id]} %>

  <%= f.label "Notes" %>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <input type="text" name="song[note_contents][]" id="song_notes_2">

  <%= f.submit %>
<% end %>


