<h1>Create a Song</h1> 

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: 'artists_autocomplete' %>
  <datalist id='artists_autocomplete'>
      <% Artist.all.each do |artist| %>
        <option value='<%= artist.name %>'>
      <% end %>
  </datalist>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <label>Notes</label>
  <input type='text' id='song_notes' name='song[notes][1]'>
  <input type='text' id='song_notes' name='song[notes][2]'>



  <%= f.submit %>
<% end %>
