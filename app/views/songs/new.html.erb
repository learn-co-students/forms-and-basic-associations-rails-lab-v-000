<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <%= text_field_tag "song[note_contents][]", nil, id: "song_notes_1" %>
  <%= text_field_tag "song[note_contents][]", nil, id: "song_notes_2" %>
  <%= text_field_tag "song[note_contents][]", nil, id: "song_notes_3" %>
  <%= text_field_tag "song[note_contents][]", nil, id: "song_notes_4" %>

  <%= f.submit %>
<% end %>


