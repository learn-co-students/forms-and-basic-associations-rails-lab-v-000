<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |artist| %>
    <option value="<%= artist.name %>"></option>
    <% end %>

  </datalist>

  <%= f.label :genre_name %>
  <%= f.text_field :genre_name, list: "genres_autocomplete", id: "song_genre_id" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
    <option value="<%= genre.name %>"></option>
    <% end %>
  </datalist>
  <h4>Song Notes:</h4>
  <input type="text" name="song[:notes][]" value="" id="song_notes_1">
  <input type="text" name="song[:notes][]" value="" id="song_notes_2">
  <input type="text" name="song[:notes][]" value="" id="song_notes_3">
  <%= f.submit %>
<% end %>
