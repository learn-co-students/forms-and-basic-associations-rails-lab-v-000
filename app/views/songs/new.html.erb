<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.label :genre_name, "Genre"%>
  <%= f.text_field :genre_name, list: "genres" %>

  <datalist id="genres">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>


  <%= f.submit %>
<% end %>
