<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br></br>
  <!-- it's asking for :song_artist_name but it fails every time I use anything other than :artist for the text_field -->
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, id: :song_artist_name %>
  <br></br>
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br></br>
  <!-- figure out what's up with this line -->
  <%= f.label :song_notes %>: 
  <br>
  <input name="song[note_contents][]" id="song_notes_1">
  <br></br>
  <input name="song[note_contents][]" id="song_notes_2">
  <br></br>
  <input name="song[note_contents][]" id="song_notes_3">
  <br></br>

  <%= f.submit %>
<% end %>


