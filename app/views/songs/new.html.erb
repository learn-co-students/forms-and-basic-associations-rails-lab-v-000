<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre_name %>
  <%= f.text_field :genre_name, list: "song_genre_id" %>
  <datalist id="song_genre_id">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <br />
  <%= f.label :note_contents %>
  <input name="song[note_ids][]" id=":song_notes_1">
  <input name="song[note_ids][]" id=":song_notes_2">
  <input name="song[note_ids][]" id=":song_notes_3">
  <%= f.submit %>
<% end %>


