<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
    <datalist id="artists_autocomplete">
      <%= Artist.all.each do |a| %>
        <option value="<%= a.name %>">
      <% end %>
    </datalist>

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <%= f.label :note_contents %>
  <%= f.text_area :note_contents, id: 'song_notes_1', name: 'song[note_contents][]' %>
  <%= f.label :note_contents %>
  <%= f.text_area :note_contents, id: 'song_notes_2', name: 'song[note_contents][]' %>
  <br />
  <%= f.submit %>
<% end %>
