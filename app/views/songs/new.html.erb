<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
    <datalist id="artists_autocomplete">
      <% if !Artist.all.empty? %>
        <% Artist.all.each do |artist| %>
          <option value="<%= artist.name %>">
        <% end %>
      <% end %>
    </datalist>

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br><br>

  <label for="song_notes_1">Notes Contents 1:</label>
  <input name="song[note_contents][]" id="song_notes_1">
  <label for="song_notes_2">Notes Contents 2:</label>
  <input name="song[note_contents][]" id="song_notes_2">
  <label for="song_notes_3">Notes Contents 3:</label>
  <input name="song[note_contents[]" id="song_notes_3">
  <br><br>

  <%= f.submit %>
<% end %>
