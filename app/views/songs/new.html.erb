<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_autocomplete" %>
  <datalist id="artist_autocomplete">
   <% Artist.all.each do |artist| %>
     <option value="<%= artist.name %>">
   <% end %>
  </datalist>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <label>Note 1 <input name='song[note_contents][]' id='song_notes_1'></label>
  <label>Note 2 <input name='song[note_contents][]' id='song_notes_2'></label>
  <label>Note 3 <input name='song[note_contents][]' id='song_notes_3'></label>




  <%= f.submit %>
<% end %>
