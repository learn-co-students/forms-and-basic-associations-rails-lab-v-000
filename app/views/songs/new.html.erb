<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    <datalist id="genre_list">
      <%= Genre.all.each do |g| %>
        <option name="<%=g.name%>" value="<%=g.name%>">
      <% end %>
    </datalist>

  <%= f.label :note %>
    <input name='song[note_contents][]' id='song_notes_1'>
    <input name='song[note_contents][]' id='song_notes_2'>
    <input name='song[note_contents][]' id='song_notes_3'>
  <%= f.submit %>
<% end %>


