<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |a| %>
      <option value="<%= a.name %>"><%= a.name %></option>
    <% end %>
  </datalist>
  <br />
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  <textarea name="song[note_contents][]" id="song_notes_1"></textarea>
  <textarea name="song[note_contents][]" id="song_notes_2"></textarea>
  <textarea name="song[note_contents][]" id="song_notes_3"></textarea>
  
  <%= f.submit %>
<% end %>


