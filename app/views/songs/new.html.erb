<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, id: "song_artist_name", list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
  <%= Artist.all.each do |artist| %>
    <option value="<%= artist.name %>">
  <% end %>
  </datalist>
  <br />

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <%= f.label "Song Notes" %>
  <% 3.times do |x| %>
    <%= f.text_field :notes, multiple: true, id: "song_notes_#{x}", value: "" %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>


