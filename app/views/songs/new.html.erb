<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %></br>
  <%= f.label :artist_name %>:
  <%= f.text_field :artist_name %></br>
  <%= f.label :genre_id %>:
  <%= f.text_field :genre_id, list: "genre_name" %>
  <datalist id="genre_name">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist></br>
  <br />
  <%= f.submit %>
<% end %>
