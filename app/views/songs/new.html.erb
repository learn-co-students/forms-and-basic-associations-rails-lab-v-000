<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <label>Artist</label>
  <%= f.text_field :artist_name %><br>

  <label>Genres</label><br>
  <%= f.select(:genre_id, Genre.all.collect { |genre| [genre.name, genre.id ]}) %><br>

  <label>Song Notes</label><br>
  <input name="song[note_contents][]" id="song_notes_1">
  <input name="song[note_contents][]" id="song_notes_2">
  <input name="song[note_contents][]" id="song_notes_3">

  <br></br>

  <%= f.submit %>
<% end %>
