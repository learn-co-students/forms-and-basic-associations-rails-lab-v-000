<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <!-- Song can be assigned an artist -->
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <!-- Song can be selected from existing genres -->
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>

  <!-- Song can have several notes: song_notes_1, song_notes_2, etc. -->
  <input name="song[note_contents][]" id="song_notes_1">
  <input name="song[note_contents][]" id="song_notes_2">
  <input name="song[note_contents][]" id="song_notes_3">

  <%= f.submit %>
<% end %>
