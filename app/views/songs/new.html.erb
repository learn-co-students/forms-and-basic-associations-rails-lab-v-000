<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.text_field :artist_name, list: "artist_autocomplete" %>
  <datalist id="artist_autocomplete">
    <%= Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist><br>

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>

  <%= f.label :notes %>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  <input type="text" name="song[note_contents][]" id="song_notes_3">
  
  <%= f.submit %>
<% end %>