<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_name", id: "song_artist_name" %>
    <datalist id="artist_name">
      <% Artist.all.each do |artist| %>
        <option value="<%= artist.name %>">
      <% end %>
    </datalist>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <%= f.label :song_note %>
  <%= f.text_area :note_contents, id: 'song_notes_1', name: 'song[note_contents][]' %>  
  <%= f.label :song_note %>
  <%= f.text_area :note_contents, id: 'song_notes_2', name: 'song[note_contents][]' %>  
  <%= f.submit %>
<% end %>


