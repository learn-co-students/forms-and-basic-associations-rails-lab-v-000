<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.text_field :genre_id, list: "genres_autocomplete" %>
    <datalist id = "genres_autocomplete">
      <% Genre.all.each do |g| %>
        <option value="<%= g.name %>">
        <% end %>
    </datalist>
  <input name="song[notes][]" id = "song_notes_1" type = "text">
  <input name="song[notes][]" id = "song_notes_2" type = "text">
  <input name="song[notes][]" id = "song_notes_3" type = "text">

  <%= f.submit %>
<% end %>
