<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.collection_select :genre_id, Genre.all, :id, :name, :id => "song_genre_id"%>
  <br />
  <%= f.label :song_notes_1 %>
  <input id='song_notes_1' name='song[note_contents][]'>
  <%= f.label :song_notes_2 %>
  <input id='song_notes_2' name='song[note_contents][]'>
  <br />
  <%= f.submit 'Submit' %>
<% end %>


