<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
	<br><br>
	
  <%= f.label "Artist:" %>
  <%= f.text_field :artist_name %> 
	<br><br>
	
	Genre datalist: 
  <%= f.text_field :genre_name, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
		<% Genre.all.order(:name).each do |genre| %>
		<option value="<%= genre.name %>">
			<% end %>
		</datalist>
		<br><br>
		
		<%= f.label "Add new Genre" %>
		<%= f.text_field :new_genre %>
		<br><br>

		<p>Notes: </p>
		<input name='song[note_contents][]' id='song_notes_1'><br>
		<input name='song[note_contents][]' id='song_notes_2'><br>
		<input name='song[note_contents][]' id='song_notes_3'>
	<br><br>
  <%= f.submit %>
<% end %>