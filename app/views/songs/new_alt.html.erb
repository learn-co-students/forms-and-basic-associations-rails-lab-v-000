<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
	<br><br>
	
  <%= f.label "Artist:" %>
  <%= f.text_field :artist_name %> 
	<br><br>
	
  <%= f.label "Genre" %>
  <%= f.collection_select :genre_id, Genre.all.order(:name), :id, :name %>
	<br>
  <%= f.label "Add new Genre" %>
  <%= f.text_field :new_genre %>

	<p>Notes: </p>
		<input name='song[note_contents][]' id='song_notes_1'><br>
		<input name='song[note_contents][]' id='song_notes_2'><br>
		<input name='song[note_contents][]' id='song_notes_3'>
	<br><br>
  <%= f.submit %>
<% end %>