<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists" %>
  <datalist id="artists">
    <% if Artist.all.any? %>
      <% Artist.all.each do |artist| %>
        <option value="<%= artist.name %>">
      <% end %>
    <% end %>
  </datalist>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <label for="song_notes_1">Notes 1</label>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <label for="song_notes_2">Notes 2</label>
  <input type="text" name="song[note_contents][]" id="song_notes_2">

  <%= f.submit %>
<% end %>

